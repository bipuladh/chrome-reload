{
  "manifest_version": 2,
  "name": "Page Refresh Plugin",
  "description": "This extension will refresh page until it loads",
  "version": "1.0",

  "browser_action": {
    "default_popup": "widget.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["activeTab", "tabs", "webNavigation"]
}
